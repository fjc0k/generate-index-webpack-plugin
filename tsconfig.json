{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "preserveSymlinks": true,
    "newLine": "LF",
    "outDir": "lib",
    "baseUrl": ".",
    "lib": ["ES2018"]
  }
}
